<Application x:Class="BloodysManager.App.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:BloodysManager.App.Views.Converters"
             ShutdownMode="OnMainWindowClose"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <conv:InverseBoolConverter x:Key="InverseBool" />

        <!-- Accent brushes -->
        <SolidColorBrush x:Key="AccentOrange" Color="#F5A623" />
        <SolidColorBrush x:Key="AccentGreen" Color="#5ABF4B" />
        <SolidColorBrush x:Key="AccentRed" Color="#E65A5A" />
        <SolidColorBrush x:Key="AccentGold" Color="#E7C45A" />

        <!-- Card border styling -->
        <Style x:Key="CardBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="#FFF8F8F8" />
            <Setter Property="BorderBrush" Value="#FFD0D0D0" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="Padding" Value="16" />
            <Setter Property="Margin" Value="8" />
        </Style>

        <!-- Rounded action buttons -->
        <Style x:Key="RoundedActionButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Margin" Value="6" />
            <Setter Property="Padding" Value="18,12" />
            <Setter Property="MinHeight" Value="44" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="12"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary buttons -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FFE6E6E6" />
            <Setter Property="Foreground" Value="#FF303030" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Margin" Value="4,0,0,0" />
            <Setter Property="Padding" Value="12,6" />
            <Setter Property="MinHeight" Value="34" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Path textbox styling -->
        <Style x:Key="PathTextBoxStyle" TargetType="TextBox">
            <Setter Property="Margin" Value="0" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="#FFBEBEBE" />
        </Style>

        <!-- Status dot -->
        <Style x:Key="StatusDotStyle" TargetType="Ellipse">
            <Setter Property="Width" Value="10" />
            <Setter Property="Height" Value="10" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="0,0,8,0" />
        </Style>

        <!-- Section header text -->
        <Style x:Key="SectionHeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Margin" Value="0,0,0,8" />
        </Style>
    </Application.Resources>
</Application>
