<Window x:Class="BloodysManager.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:conv="clr-namespace:BloodysManager.App.Views.Converters"
        Title="Bloody's Manager"
        Height="800"
        Width="1280"
        FontSize="14"
        MinWidth="960"
        MinHeight="640">
    <Window.Resources>
        <conv:BoolToBrushConverter x:Key="BoolToBrush" />
        <Style TargetType="Button">
            <Setter Property="Margin" Value="6" />
            <Setter Property="Padding" Value="10,6" />
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="4" />
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Bloody's Manager"
                   FontSize="28"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,12" />

        <!-- Repository + Servers -->
        <Grid Grid.Row="1" Margin="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <!-- Left column -->
            <StackPanel Grid.Column="0">
                <GroupBox Header="Repository" Margin="0,0,0,12">
                    <DockPanel Margin="8">
                        <TextBox DockPanel.Dock="Left"
                                 Width="420"
                                 Text="{Binding Config.RepositoryUrl, UpdateSourceTrigger=PropertyChanged}" />
                        <Button Content="Save"
                                Click="SaveRepo_Click"
                                HorizontalAlignment="Right" />
                    </DockPanel>
                </GroupBox>

                <GroupBox Header="Download Target" Margin="0,0,0,12">
                    <DockPanel Margin="8">
                        <TextBox DockPanel.Dock="Left"
                                 Width="420"
                                 Text="{Binding Config.DownloadTarget, UpdateSourceTrigger=PropertyChanged}" />
                        <Button Content="Save"
                                Click="SaveDownload_Click"
                                HorizontalAlignment="Right" />
                    </DockPanel>
                </GroupBox>

                <GroupBox Header="Servers">
                    <StackPanel Margin="8">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <Button Content="New" Click="NewProfile_Click" />
                            <Button Content="Delete" Click="DeleteProfile_Click" />
                            <Button Content="Rename" Click="RenameProfile_Click" />
                        </StackPanel>
                        <ListBox ItemsSource="{Binding Profiles}"
                                 SelectedIndex="{Binding SelectedIndex}"
                                 DisplayMemberPath="Name"
                                 Height="200"
                                 Margin="0,12,0,0" />
                    </StackPanel>
                </GroupBox>
            </StackPanel>

            <!-- Right column -->
            <GroupBox Grid.Column="1" Header="Server Paths" Margin="12,0,0,0">
                <Grid Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Ellipse Grid.Row="0"
                             Grid.Column="0"
                             Width="14"
                             Height="14"
                             Margin="0,4,8,4"
                             Fill="{Binding SelectedProfileExistsLive, Converter={StaticResource BoolToBrush}, FallbackValue=Gray, TargetNullValue=Gray}" />
                    <TextBlock Grid.Row="0"
                               Grid.Column="1"
                               Text="Live"
                               VerticalAlignment="Center"
                               Margin="0,4" />
                    <TextBox Grid.Row="0"
                             Grid.Column="2"
                             Text="{Binding SelectedProfile.PathLive}"
                             Margin="8,2"
                             MinWidth="600" />
                    <Button Grid.Row="0"
                            Grid.Column="3"
                            Content="..."
                            Width="36"
                            Click="BrowseLive_Click" />

                    <Ellipse Grid.Row="1"
                             Grid.Column="0"
                             Width="14"
                             Height="14"
                             Margin="0,4,8,4"
                             Fill="{Binding SelectedProfileExistsCopy, Converter={StaticResource BoolToBrush}, FallbackValue=Gray, TargetNullValue=Gray}" />
                    <TextBlock Grid.Row="1"
                               Grid.Column="1"
                               Text="Copy"
                               VerticalAlignment="Center"
                               Margin="0,4" />
                    <TextBox Grid.Row="1"
                             Grid.Column="2"
                             Text="{Binding SelectedProfile.PathCopy}"
                             Margin="8,2"
                             MinWidth="600" />
                    <Button Grid.Row="1"
                            Grid.Column="3"
                            Content="..."
                            Width="36"
                            Click="BrowseCopy_Click" />

                    <Ellipse Grid.Row="2"
                             Grid.Column="0"
                             Width="14"
                             Height="14"
                             Margin="0,4,8,4"
                             Fill="{Binding SelectedProfileExistsBackup, Converter={StaticResource BoolToBrush}, FallbackValue=Gray, TargetNullValue=Gray}" />
                    <TextBlock Grid.Row="2"
                               Grid.Column="1"
                               Text="Backup"
                               VerticalAlignment="Center"
                               Margin="0,4" />
                    <TextBox Grid.Row="2"
                             Grid.Column="2"
                             Text="{Binding SelectedProfile.PathBackup}"
                             Margin="8,2"
                             MinWidth="600" />
                    <Button Grid.Row="2"
                            Grid.Column="3"
                            Content="..."
                            Width="36"
                            Click="BrowseBackup_Click" />

                    <Ellipse Grid.Row="3"
                             Grid.Column="0"
                             Width="14"
                             Height="14"
                             Margin="0,4,8,4"
                             Fill="{Binding SelectedProfileExistsBackupZip, Converter={StaticResource BoolToBrush}, FallbackValue=Gray, TargetNullValue=Gray}" />
                    <TextBlock Grid.Row="3"
                               Grid.Column="1"
                               Text="Backup Zip"
                               VerticalAlignment="Center"
                               Margin="0,4" />
                    <TextBox Grid.Row="3"
                             Grid.Column="2"
                             Text="{Binding SelectedProfile.PathBackupZip}"
                             Margin="8,2"
                             MinWidth="600" />
                    <Button Grid.Row="3"
                            Grid.Column="3"
                            Content="..."
                            Width="36"
                            Click="BrowseBackupZip_Click" />
                </Grid>
            </GroupBox>
        </Grid>

        <!-- Actions + Log -->
        <Grid Grid.Row="2" Margin="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <WrapPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,12">
                <Button Content="Create Structure" Click="CreateStructure_Click" />
                <Button Content="Download Repo" Click="Download_Click" Background="#FFF5B041" />
                <Button Content="Update Repo" Click="Update_Click" Background="#FFF5B041" />
                <Button Content="Live â†’ Copy" Click="LiveCopy_Click" Background="#FF7DDA7D" />
                <Button Content="Delete Live" Click="DeleteLive_Click" Background="#FFFF6B6B" />
                <Button Content="Delete Copy" Click="DeleteCopy_Click" Background="#FFFF6B6B" />
                <Button Content="Backup" Click="Backup_Click" Background="#FFD5B04A" />
                <Button Content="Rotate Backup" Click="Rotate_Click" Background="#FFD5B04A" />
            </WrapPanel>

            <GroupBox Grid.Row="1" Header="Log">
                <TextBox Text="{Binding LogText}"
                         Margin="8"
                         FontFamily="Consolas"
                         FontSize="12"
                         AcceptsReturn="True"
                         IsReadOnly="True"
                         VerticalScrollBarVisibility="Auto"/>
            </GroupBox>
        </Grid>

        <!-- Process controls and performance info -->
        <Grid Grid.Row="3" Margin="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="Server Controls" FontWeight="Bold" Margin="0,0,0,6" />

                <Grid Margin="0,0,0,6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Ellipse Grid.Column="0"
                             Width="14"
                             Height="14"
                             Margin="0,4,8,4"
                             Fill="{Binding SelectedWorldExeExists, Converter={StaticResource BoolToBrush}, FallbackValue=Gray, TargetNullValue=Gray}" />
                    <TextBlock Grid.Column="1"
                               Text="worldserver.exe"
                               VerticalAlignment="Center"
                               Margin="0,4" />
                    <TextBox Grid.Column="2"
                             Text="{Binding SelectedProfile.WorldExePath, UpdateSourceTrigger=PropertyChanged}"
                             Margin="8,2"
                             MinWidth="420" />
                    <Button Grid.Column="3" Content="..." Width="36" Click="BrowseWorldExe_Click" />
                    <Button Grid.Column="4" Content="Start" Click="StartWorld_Click" />
                    <Button Grid.Column="5" Content="Restart" Click="RestartWorld_Click" />
                    <Button Grid.Column="6" Content="Stop" Click="StopWorld_Click" />
                </Grid>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Ellipse Grid.Column="0"
                             Width="14"
                             Height="14"
                             Margin="0,4,8,4"
                             Fill="{Binding SelectedAuthExeExists, Converter={StaticResource BoolToBrush}, FallbackValue=Gray, TargetNullValue=Gray}" />
                    <TextBlock Grid.Column="1"
                               Text="authserver.exe"
                               VerticalAlignment="Center"
                               Margin="0,4" />
                    <TextBox Grid.Column="2"
                             Text="{Binding SelectedProfile.AuthExePath, UpdateSourceTrigger=PropertyChanged}"
                             Margin="8,2"
                             MinWidth="420" />
                    <Button Grid.Column="3" Content="..." Width="36" Click="BrowseAuthExe_Click" />
                    <Button Grid.Column="4" Content="Start" Click="StartAuth_Click" />
                    <Button Grid.Column="5" Content="Restart" Click="RestartAuth_Click" />
                    <Button Grid.Column="6" Content="Stop" Click="StopAuth_Click" />
                </Grid>
            </StackPanel>

            <Border Grid.Column="1" BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="6" Padding="12">
                <StackPanel>
                    <TextBlock Text="Process Performance (live)" FontWeight="Bold" />
                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                        <StackPanel Margin="0,0,24,0">
                            <TextBlock Text="World CPU" />
                            <TextBlock Text="{Binding WorldCpu, StringFormat={}{0:F1}%}" FontFamily="Consolas" />
                            <TextBlock Text="World RAM" Margin="0,6,0,0" />
                            <TextBlock Text="{Binding WorldRam, StringFormat={}{0:F0} MB}" FontFamily="Consolas" />
                            <TextBlock Text="World Status" Margin="0,6,0,0" />
                            <TextBlock Text="{Binding WorldStatus}" FontFamily="Consolas" />
                        </StackPanel>
                        <StackPanel>
                            <TextBlock Text="Auth CPU" />
                            <TextBlock Text="{Binding AuthCpu, StringFormat={}{0:F1}%}" FontFamily="Consolas" />
                            <TextBlock Text="Auth RAM" Margin="0,6,0,0" />
                            <TextBlock Text="{Binding AuthRam, StringFormat={}{0:F0} MB}" FontFamily="Consolas" />
                            <TextBlock Text="Auth Status" Margin="0,6,0,0" />
                            <TextBlock Text="{Binding AuthStatus}" FontFamily="Consolas" />
                        </StackPanel>
                    </StackPanel>

                    <Border Height="120"
                            Margin="0,12,0,0"
                            Background="#11000000"
                            CornerRadius="6"
                            HorizontalAlignment="Stretch">
                        <TextBlock Text="(chart placeholder)"
                                   Foreground="Gray"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center" />
                    </Border>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
