<Window x:Class="BloodysManager.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:conv="clr-namespace:BloodysManager.App.Views.Converters"
        Title="Bloody's Manager"
        Height="800"
        Width="1280"
        FontSize="14"
        MinWidth="960"
        MinHeight="640">
    <Window.Resources>
        <conv:BoolToBrushConverter x:Key="BoolToBrush" />
        <Style TargetType="Button">
            <Setter Property="Margin" Value="6" />
            <Setter Property="Padding" Value="10,6" />
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="4" />
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Bloody's Manager"
                   FontSize="28"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,12" />

        <!-- Repository + Servers -->
        <Grid Grid.Row="1" Margin="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <!-- Left column -->
            <StackPanel Grid.Column="0">
                <GroupBox Header="Repository" Margin="0,0,0,12">
                    <DockPanel Margin="8">
                        <TextBox DockPanel.Dock="Left"
                                 Width="420"
                                 Text="{Binding Config.RepositoryUrl, UpdateSourceTrigger=PropertyChanged}" />
                        <Button Content="Save"
                                Click="SaveRepo_Click"
                                HorizontalAlignment="Right" />
                    </DockPanel>
                </GroupBox>

                <GroupBox Header="Download Target" Margin="0,0,0,12">
                    <DockPanel Margin="8">
                        <TextBox DockPanel.Dock="Left"
                                 Width="420"
                                 Text="{Binding Config.DownloadTarget, UpdateSourceTrigger=PropertyChanged}" />
                        <Button Content="Save"
                                Click="SaveDownload_Click"
                                HorizontalAlignment="Right" />
                    </DockPanel>
                </GroupBox>

                <GroupBox Header="Servers">
                    <StackPanel Margin="8">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <Button Content="New" Click="NewProfile_Click" />
                            <Button Content="Delete" Click="DeleteProfile_Click" />
                            <Button Content="Rename" Click="RenameProfile_Click" />
                        </StackPanel>
                        <ListBox ItemsSource="{Binding Profiles}"
                                 SelectedIndex="{Binding SelectedIndex}"
                                 DisplayMemberPath="Name"
                                 Height="200"
                                 Margin="0,12,0,0" />
                    </StackPanel>
                </GroupBox>
            </StackPanel>

            <!-- Right column -->
            <GroupBox Grid.Column="1" Header="Server Paths" Margin="12,0,0,0">
                <Grid Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Ellipse Grid.Row="0"
                             Grid.Column="0"
                             Width="14"
                             Height="14"
                             Margin="0,4,8,4"
                             Fill="{Binding SelectedProfileExistsLive, Converter={StaticResource BoolToBrush}, FallbackValue=Gray, TargetNullValue=Gray}" />
                    <TextBlock Grid.Row="0"
                               Grid.Column="1"
                               Text="Live"
                               VerticalAlignment="Center"
                               Margin="0,4" />
                    <TextBox Grid.Row="0"
                             Grid.Column="2"
                             Text="{Binding SelectedProfile.PathLive}"
                             Margin="8,2" />
                    <Button Grid.Row="0"
                            Grid.Column="3"
                            Content="..."
                            Width="36"
                            Click="BrowseLive_Click" />

                    <Ellipse Grid.Row="1"
                             Grid.Column="0"
                             Width="14"
                             Height="14"
                             Margin="0,4,8,4"
                             Fill="{Binding SelectedProfileExistsCopy, Converter={StaticResource BoolToBrush}, FallbackValue=Gray, TargetNullValue=Gray}" />
                    <TextBlock Grid.Row="1"
                               Grid.Column="1"
                               Text="Copy"
                               VerticalAlignment="Center"
                               Margin="0,4" />
                    <TextBox Grid.Row="1"
                             Grid.Column="2"
                             Text="{Binding SelectedProfile.PathCopy}"
                             Margin="8,2" />
                    <Button Grid.Row="1"
                            Grid.Column="3"
                            Content="..."
                            Width="36"
                            Click="BrowseCopy_Click" />

                    <Ellipse Grid.Row="2"
                             Grid.Column="0"
                             Width="14"
                             Height="14"
                             Margin="0,4,8,4"
                             Fill="{Binding SelectedProfileExistsBackup, Converter={StaticResource BoolToBrush}, FallbackValue=Gray, TargetNullValue=Gray}" />
                    <TextBlock Grid.Row="2"
                               Grid.Column="1"
                               Text="Backup"
                               VerticalAlignment="Center"
                               Margin="0,4" />
                    <TextBox Grid.Row="2"
                             Grid.Column="2"
                             Text="{Binding SelectedProfile.PathBackup}"
                             Margin="8,2" />
                    <Button Grid.Row="2"
                            Grid.Column="3"
                            Content="..."
                            Width="36"
                            Click="BrowseBackup_Click" />

                    <Ellipse Grid.Row="3"
                             Grid.Column="0"
                             Width="14"
                             Height="14"
                             Margin="0,4,8,4"
                             Fill="{Binding SelectedProfileExistsBackupZip, Converter={StaticResource BoolToBrush}, FallbackValue=Gray, TargetNullValue=Gray}" />
                    <TextBlock Grid.Row="3"
                               Grid.Column="1"
                               Text="Backup Zip"
                               VerticalAlignment="Center"
                               Margin="0,4" />
                    <TextBox Grid.Row="3"
                             Grid.Column="2"
                             Text="{Binding SelectedProfile.PathBackupZip}"
                             Margin="8,2" />
                    <Button Grid.Row="3"
                            Grid.Column="3"
                            Content="..."
                            Width="36"
                            Click="BrowseBackupZip_Click" />
                </Grid>
            </GroupBox>
        </Grid>

        <!-- Actions + Log -->
        <Grid Grid.Row="2" Margin="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <WrapPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,12">
                <Button Content="Create Structure" Click="CreateStructure_Click" />
                <Button Content="Download Repo" Click="Download_Click" Background="#FFF5B041" />
                <Button Content="Update Repo" Click="Update_Click" Background="#FFF5B041" />
                <Button Content="Live â†’ Copy" Click="LiveCopy_Click" Background="#FF7DDA7D" />
                <Button Content="Delete Live" Click="DeleteLive_Click" Background="#FFFF6B6B" />
                <Button Content="Delete Copy" Click="DeleteCopy_Click" Background="#FFFF6B6B" />
                <Button Content="Backup" Click="Backup_Click" Background="#FFD5B04A" />
                <Button Content="Rotate Backup" Click="Rotate_Click" Background="#FFD5B04A" />
            </WrapPanel>

            <GroupBox Grid.Row="1" Header="Log">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <TextBlock Text="{Binding LogText}"
                               FontFamily="Consolas"
                               TextWrapping="Wrap"
                               Margin="6" />
                </ScrollViewer>
            </GroupBox>
        </Grid>

        <!-- Performance info -->
        <TextBlock Grid.Row="3"
                   Text="Performance samples (CPU/RAM) are logged every 30 seconds."
                   HorizontalAlignment="Center"
                   Margin="0,6" />
    </Grid>
</Window>
